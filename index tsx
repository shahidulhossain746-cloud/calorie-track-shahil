import { View, Text, StyleSheet, ScrollView, TouchableOpacity, Image, Animated, Alert, Platform } from 'react-native';
import { useSafeAreaInsets } from 'react-native-safe-area-context';
import { TrendingUp, TrendingDown, Flame, Pizza, Drumstick, Wheat, Sparkles, Camera, User } from 'lucide-react-native';
import { useEffect, useRef, useState } from 'react';
import { useUser } from '../../contexts/UserContext';
import { useTodayProgress } from '../../contexts/MealsContext';
import { useRouter } from 'expo-router';
import * as ImagePicker from 'expo-image-picker';

export default function HomeScreen() {
  const insets = useSafeAreaInsets();
  const router = useRouter();
  const { user, updateProfilePicture } = useUser();
  const progress = useTodayProgress(user?.targetCalories || 2000);
  const fadeAnim = useRef(new Animated.Value(0)).current;
  const scaleAnim = useRef(new Animated.Value(0.95)).current;
  const [imageLoading, setImageLoading] = useState(false);

  useEffect(() => {
    Animated.parallel([
      Animated.timing(fadeAnim, {
        toValue: 1,
        duration: 600,
        useNativeDriver: true,
      }),
      Animated.spring(scaleAnim, {
        toValue: 1,
        tension: 40,
        friction: 7,
        useNativeDriver: true,
      }),
    ]).start();
  }, []);

  const caloriesPercentage = Math.min(
    (progress.totalCalories / progress.targetCalories) * 100,
    100
  );
  const caloriesRemaining = progress.targetCalories - progress.totalCalories;

  const proteinPercentage = user?.targetProtein 
    ? Math.min((progress.totalProtein / user.targetProtein) * 100, 100)
    : 0;
  const proteinRemaining = (user?.targetProtein || 0) - progress.totalProtein;

  const pickImage = async () => {
    if (Platform.OS === 'web') {
      Alert.alert('Not Available', 'Image picking is not available on web');
      return;
    }

    const { status } = await ImagePicker.requestMediaLibraryPermissionsAsync();
    if (status !== 'granted') {
      Alert.alert('Permission needed', 'Please grant camera roll permissions');
      return;
    }

    setImageLoading(true);
    const result = await ImagePicker.launchImageLibraryAsync({
      mediaTypes: 'images' as any,
      allowsEditing: true,
      aspect: [1, 1],
      quality: 0.8,
    });

    setImageLoading(false);

    if (!result.canceled && result.assets[0]) {
      updateProfilePicture(result.assets[0].uri);
    }
  };

  const macros = [
    {
      label: 'Protein',
      value: progress.totalProtein,
      target: user?.targetProtein,
      unit: 'g',
      icon: Drumstick,
      color: '#ef4444',
    },
    {
      label: 'Carbs',
      value: progress.totalCarbs,
      unit: 'g',
      icon: Wheat,
      color: '#f59e0b',
    },
    {
      label: 'Fat',
      value: progress.totalFat,
      unit: 'g',
      icon: Pizza,
      color: '#8b5cf6',
    },
  ];

  return (
    <View style={[styles.container, { paddingTop: insets.top }]}>
      <View style={styles.header}>
        <View style={styles.headerContent}>
          <View>
            <View style={styles.greetingRow}>
              <Text style={styles.greeting}>Hello, {user?.name || 'there'}!</Text>
              <Sparkles size={24} color="#f59e0b" fill="#f59e0b" />
            </View>
            <Text style={styles.subtitle}>
              {new Date().toLocaleDateString('en-US', {
                weekday: 'long',
                month: 'long',
                day: 'numeric',
              })}
            </Text>
          </View>
          <TouchableOpacity 
            style={styles.profilePicContainer}
            onPress={pickImage}
            disabled={imageLoading}
          >
            {user?.profilePictureUri ? (
              <Image 
                source={{ uri: user.profilePictureUri }} 
                style={styles.profilePic}
              />
            ) : (
              <View style={styles.profilePicPlaceholder}>
                <User size={32} color="#64748b" />
              </View>
            )}
            <View style={styles.cameraIconContainer}>
              <Camera size={16} color="#ffffff" />
            </View>
          </TouchableOpacity>
        </View>
      </View>

      <ScrollView
        style={styles.content}
        contentContainerStyle={styles.contentContainer}
        showsVerticalScrollIndicator={false}
      >
        <Animated.View style={[styles.statsCard, { opacity: fadeAnim, transform: [{ scale: scaleAnim }] }]}>
          <View style={styles.caloriesCard}>
          <View style={styles.caloriesHeader}>
            <Flame size={32} color="#ef4444" />
            <Text style={styles.caloriesTitle}>Daily Calories</Text>
          </View>

          <View style={styles.caloriesMain}>
            <Text style={styles.caloriesValue}>{progress.totalCalories}</Text>
            <Text style={styles.caloriesTarget}>/ {progress.targetCalories} kcal</Text>
          </View>

          <View style={styles.progressBarContainer}>
            <View style={styles.progressBar}>
              <View
                style={[
                  styles.progressBarFill,
                  { width: `${caloriesPercentage}%` },
                ]}
              />
            </View>
          </View>

          <View style={styles.caloriesFooter}>
            {caloriesRemaining > 0 ? (
              <>
                <TrendingUp size={20} color="#10b981" />
                <Text style={styles.caloriesRemaining}>
                  {caloriesRemaining} kcal remaining
                </Text>
              </>
            ) : (
              <>
                <TrendingDown size={20} color="#ef4444" />
                <Text style={[styles.caloriesRemaining, { color: '#ef4444' }]}>
                  {Math.abs(caloriesRemaining)} kcal over target
                </Text>
              </>
            )}
          </View>

          <View style={styles.divider} />

          <View style={styles.proteinCard}>
            <View style={styles.proteinHeader}>
              <Drumstick size={28} color="#ef4444" />
              <Text style={styles.proteinTitle}>Daily Protein</Text>
            </View>

            <View style={styles.proteinMain}>
              <Text style={styles.proteinValue}>{progress.totalProtein}</Text>
              <Text style={styles.proteinTarget}>/ {user?.targetProtein || 0}g</Text>
            </View>

            <View style={styles.progressBarContainer}>
              <View style={styles.progressBar}>
                <View
                  style={[
                    styles.proteinProgressFill,
                    { width: `${proteinPercentage}%` },
                  ]}
                />
              </View>
            </View>

            <View style={styles.proteinFooter}>
              {proteinRemaining > 0 ? (
                <>
                  <TrendingUp size={18} color="#10b981" />
                  <Text style={styles.proteinRemaining}>
                    {proteinRemaining}g remaining
                  </Text>
                </>
              ) : (
                <>
                  <TrendingDown size={18} color="#ef4444" />
                  <Text style={[styles.proteinRemaining, { color: '#ef4444' }]}>
                    Target reached!
                  </Text>
                </>
              )}
            </View>
          </View>
          </View>
        </Animated.View>

        <View style={styles.macrosSection}>
          <Text style={styles.sectionTitle}>Macronutrients</Text>
          <View style={styles.macrosGrid}>
            {macros.map((macro) => {
              const Icon = macro.icon;
              return (
                <View key={macro.label} style={styles.macroCard}>
                  <View
                    style={[
                      styles.macroIconContainer,
                      { backgroundColor: `${macro.color}20` },
                    ]}
                  >
                    <Icon size={24} color={macro.color} />
                  </View>
                  <Text style={styles.macroLabel}>{macro.label}</Text>
                  <Text style={[styles.macroValue, { color: macro.color }]}>
                    {macro.value}
                    {macro.unit}
                  </Text>
                  {macro.target && (
                    <Text style={styles.macroTarget}>/ {macro.target}g</Text>
                  )}
                </View>
              );
            })}
          </View>
        </View>

        <View style={styles.mealsSection}>
          <View style={styles.sectionHeader}>
            <Text style={styles.sectionTitle}>Today&apos;s Meals</Text>
            <Text style={styles.mealCount}>{progress.meals.length} meals</Text>
          </View>

          {progress.meals.length === 0 ? (
            <View style={styles.emptyState}>
              <Text style={styles.emptyStateText}>No meals logged yet today</Text>
              <TouchableOpacity
                style={styles.addMealButton}
                onPress={() => router.push('/(tabs)/track')}
              >
                <Text style={styles.addMealButtonText}>Log Your First Meal</Text>
              </TouchableOpacity>
            </View>
          ) : (
            <View style={styles.mealsList}>
              {progress.meals.map((meal) => (
                <View key={meal.id} style={styles.mealCard}>
                  <Image source={{ uri: meal.imageUri }} style={styles.mealImage} />
                  <View style={styles.mealInfo}>
                    <Text style={styles.mealName}>{meal.name}</Text>
                    <Text style={styles.mealTime}>
                      {new Date(meal.timestamp).toLocaleTimeString('en-US', {
                        hour: 'numeric',
                        minute: '2-digit',
                      })}
                    </Text>
                    <View style={styles.mealMacros}>
                      <View style={styles.mealMacro}>
                        <Text style={styles.mealMacroValue}>{meal.calories}</Text>
                        <Text style={styles.mealMacroLabel}>cal</Text>
                      </View>
                      <View style={styles.mealMacro}>
                        <Text style={styles.mealMacroValue}>{meal.protein}g</Text>
                        <Text style={styles.mealMacroLabel}>protein</Text>
                      </View>
                      <View style={styles.mealMacro}>
                        <Text style={styles.mealMacroValue}>{meal.carbs}g</Text>
                        <Text style={styles.mealMacroLabel}>carbs</Text>
                      </View>
                      <View style={styles.mealMacro}>
                        <Text style={styles.mealMacroValue}>{meal.fat}g</Text>
                        <Text style={styles.mealMacroLabel}>fat</Text>
                      </View>
                    </View>
                  </View>
                </View>
              ))}
            </View>
          )}
        </View>
      </ScrollView>
    </View>
  );
}

