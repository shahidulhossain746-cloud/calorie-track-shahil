  },
  countryTextActive: {
    color: '#2563eb',
    fontWeight: '600' as const,
  },
  photoButton: {
    flexDirection: 'row' as const,
    alignItems: 'center' as const,
    justifyContent: 'center' as const,
    gap: 12,
    padding: 20,
    borderRadius: 12,
    borderWidth: 2,
    borderColor: '#2563eb',
    borderStyle: 'dashed' as const,
    backgroundColor: '#f9fafb',
  },
  photoButtonText: {
    fontSize: 16,
    fontWeight: '600' as const,
    color: '#2563eb',
  },
  photoNote: {
    fontSize: 14,
    color: '#10b981',
    textAlign: 'center' as const,
    marginTop: 8,
  },
  goalOptions: {
    gap: 12,
  },
  goalCard: {
    padding: 20,
    borderRadius: 16,
    borderWidth: 2,
    borderColor: '#e5e7eb',
    backgroundColor: '#f9fafb',
  },
  goalCardActive: {
    borderColor: '#2563eb',
    backgroundColor: '#eff6ff',
  },
  goalLabel: {
    fontSize: 18,
    fontWeight: '700' as const,
    color: '#374151',
    marginBottom: 4,
  },
  goalLabelActive: {
    color: '#2563eb',
  },
  goalDesc: {
    fontSize: 14,
    color: '#6b7280',
  },
  goalDescActive: {
