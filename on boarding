    textAlign: 'center' as const,
    marginBottom: 32,
  },
  form: {
    gap: 20,
  },
  inputGroup: {
    gap: 8,
  },
  label: {
    fontSize: 14,
    fontWeight: '600' as const,
    color: '#374151',
  },
  input: {
    borderWidth: 1,
    borderColor: '#d1d5db',
    borderRadius: 12,
    padding: 16,
    fontSize: 16,
    color: '#111827',
    backgroundColor: '#f9fafb',
  },
  row: {
    flexDirection: 'row' as const,
    gap: 12,
  },
  flex1: {
    flex: 1,
  },
  genderButtons: {
    flexDirection: 'row' as const,
    gap: 8,
  },
  genderButton: {
    flex: 1,
    padding: 16,
    borderRadius: 12,
    borderWidth: 1,
    borderColor: '#d1d5db',
    backgroundColor: '#f9fafb',
    alignItems: 'center' as const,
  },
  genderButtonActive: {
    borderColor: '#2563eb',
    backgroundColor: '#eff6ff',
  },
